{
	"compilerOptions": {
		"target": "es5",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": [
			"es6",
			"dom",
			"es2016",
			"es2017"
		],
		"module": "esnext",
		"removeComments": true,
		"alwaysStrict": true,
		"allowUnreachableCode": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		"src/**/*.stories.tsx",
		"src/**/*.test.tsx",
		"build"
	]
}